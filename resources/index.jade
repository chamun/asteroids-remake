doctype html
html
  head
    title Asteroids Remake
    meta(name="viewport" content="width=device-width")
    script(src=quickSrc)
    style
      include style.css
  body
    div(class='center-text')
      a(id="fullscreen" href="#")
        ="go fullscreen!"
    canvas(id="canvas" width=360 height=640)/
    - each image in images
      ="\n    "
      img(
        id=removeFileExtension(image)
        src=image
      )
    - each sound in sounds
      audio(
        id=removeFileExtension(sound)
        src=sound
      )
    script(src="main.js")
